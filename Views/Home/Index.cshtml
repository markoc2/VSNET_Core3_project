@model List<VBNET_Core3_project.Models.Cliente> 
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1> 
</div>

<h4 class="text-success">Lista de Pacientes</h4>
<br />
<div class="col-sm-10">
    @Html.ActionLink("Crear Nuevo", "Edit", "Home",null, new { @class = "btn btn-primary" })
</div>
<br />

<div>
    <table class="table table-striped  table-hover">
        <thead>
            <tr>
                 <th scope="col">Nombre cliente</th>
                 <th scope="col">Direccion</th>
                 <th scope="col">Telefono</th>
                 <th scope="col">Edad</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                         <td>@item.Nombre</td>
                         <td>@item.Direccion</td>
                         <td>@item.Telefono</td>
                         <td>@item.Edad</td>
                    </tr>
                    
                }
            }
            
        </tbody>
    </table>
</div>

<h5 class="text-success">@DateTime.Now.ToShortDateString()</h5>
